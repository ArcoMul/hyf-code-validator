{
	"name": "HYF Code Validator",
	"version": "0.0.1",
	"description": "Opinionated in-browser code validator",
	"homepage_url": "https://github.com/ArcoMul/hyf-code-validator",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "hyf-code-validator@arcomul.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": ["activeTab", "*://*/*", "file://*/*"],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"devtools_page": "devtools-page.html"
}
